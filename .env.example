# StorageSage Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# JWT Secret for API authentication (REQUIRED)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_VALUE

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# Web backend HTTPS port
BACKEND_PORT=8443

# Daemon Prometheus metrics port
DAEMON_METRICS_PORT=9090

# =============================================================================
# TLS/SSL CERTIFICATES
# =============================================================================

# Path to TLS certificate (will be generated by 'make setup' if not exists)
TLS_CERT_FILE=./web/certs/server.crt
TLS_KEY_FILE=./web/certs/server.key

# =============================================================================
# DATABASE
# =============================================================================

# SQLite database path for deletion history
DATABASE_PATH=/var/lib/storage-sage/deletions.db

# =============================================================================
# SECURITY
# =============================================================================

# JWT token expiration (in hours)
JWT_EXPIRATION_HOURS=24

# API rate limiting
RATE_LIMIT_REQUESTS=100  # requests per minute
RATE_LIMIT_BURST=20      # burst allowance

# Request body size limit (in MB)
BODY_SIZE_LIMIT_MB=10

# =============================================================================
# LOGGING
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# DOCKER-SPECIFIC SETTINGS
# =============================================================================

# Container user/group IDs (match host for volume permissions)
PUID=1000
PGID=1000

# Time zone for containers
TZ=UTC

# =============================================================================
# OPTIONAL: OBSERVABILITY
# =============================================================================

# Prometheus scrape interval
PROMETHEUS_SCRAPE_INTERVAL=15s

# Grafana admin password (change in production!)
# GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# OPTIONAL: ADVANCED SETTINGS
# =============================================================================

# Enable debug mode (not for production)
# DEBUG=false

# Custom metrics path
# METRICS_PATH=/metrics

# Health check endpoint
# HEALTH_CHECK_PATH=/health
