{
  "dashboard": {
    "title": "StorageSage Deletion Analytics",
    "tags": ["storage-sage", "cleanup", "deletions"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "uid": "storagesage-deletion-analytics",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "action",
          "type": "query",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "query": "label_values(action)",
          "current": {
            "value": ["All"],
            "text": "All"
          },
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "reason",
          "type": "query",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "query": "label_values(primary_reason)",
          "current": {
            "value": ["All"],
            "text": "All"
          },
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "type": "gauge",
        "title": "Deletion Rate (per minute)",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "sum(rate({job=\"storage-sage\", action=\"DELETE\"}[5m])) * 60",
            "refId": "A",
            "legendFormat": "Deletions/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Space Freed Today (MB)",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "sum(sum_over_time({job=\"storage-sage\", action=\"DELETE\"} | regexp `size=(?P<size>\\d+)` | line_format `{{.size}}` [24h])) / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mbytes",
            "decimals": 2,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"}
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "type": "piechart",
        "title": "Deletion Reasons Distribution (24h)",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"storage-sage\", action=\"DELETE\"} | json [24h])) by (primary_reason)",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "showLegend": true,
            "values": ["percent", "value"]
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "type": "timeseries",
        "title": "Hourly Deletion Timeline",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"storage-sage\", action=\"DELETE\"} [1h]))",
            "refId": "A",
            "legendFormat": "Deletions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10,
              "pointSize": 5
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "bargauge",
        "title": "Action Type Distribution (24h)",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"storage-sage\"} [24h])) by (action)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              }
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "DELETE"},
              "properties": [{"id": "color", "value": {"fixedColor": "red"}}]
            },
            {
              "matcher": {"id": "byName", "options": "SKIP"},
              "properties": [{"id": "color", "value": {"fixedColor": "yellow"}}]
            },
            {
              "matcher": {"id": "byName", "options": "ERROR"},
              "properties": [{"id": "color", "value": {"fixedColor": "dark-red"}}]
            },
            {
              "matcher": {"id": "byName", "options": "DRY_RUN"},
              "properties": [{"id": "color", "value": {"fixedColor": "blue"}}]
            }
          ]
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "barchart",
        "title": "Top 10 Deleted Paths",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "topk(10, sum(count_over_time({job=\"storage-sage\", action=\"DELETE\"} | regexp `path=(?P<path>\\S+)` [24h])) by (path))",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          },
          "xTickLabelRotation": 0,
          "xTickLabelSpacing": 0
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "logs",
        "title": "Error Log Stream (Last 1h)",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "{job=\"storage-sage\", action=\"ERROR\"}",
            "refId": "A"
          }
        ],
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": false,
          "showCommonLabels": false,
          "showLabels": false,
          "showTime": true,
          "sortOrder": "Descending",
          "wrapLogMessage": false
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "barchart",
        "title": "Space Freed by Reason",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "sum(sum_over_time({job=\"storage-sage\", action=\"DELETE\"} | regexp `size=(?P<size>\\d+)` | line_format `{{.size}}` [24h])) by (primary_reason) / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mbytes"
          }
        },
        "options": {
          "orientation": "horizontal",
          "legend": {
            "showLegend": true,
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "type": "timeseries",
        "title": "Stacked Cleanup Activity",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"storage-sage\", primary_reason=\"stacked_cleanup\"} [5m]))",
            "refId": "A",
            "legendFormat": "Stacked Cleanup Events"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            },
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 20,
              "lineWidth": 2
            }
          }
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "1m",
          "handler": 1,
          "name": "Stacked Cleanup Detected",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "type": "stat",
        "title": "Average File Size Deleted (24h)",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "avg(sum_over_time({job=\"storage-sage\", action=\"DELETE\"} | regexp `size=(?P<size>\\d+)` | line_format `{{.size}}` [24h])) / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kbytes",
            "decimals": 1
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "justifyMode": "auto"
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Stacked Cleanup Events",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "enable": true,
          "expr": "{job=\"storage-sage\", primary_reason=\"stacked_cleanup\"}",
          "iconColor": "red",
          "titleFormat": "Stacked Cleanup",
          "textFormat": "Critical disk condition"
        }
      ]
    }
  }
}

