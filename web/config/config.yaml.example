# StorageSage Configuration
# This file is managed via the Web UI
# Edit at: https://localhost:8443 (Config Editor)
#
# IMPORTANT: After copying this file, you MUST add at least one path to scan_paths
# or configure paths with specific rules below.

# Basic scan paths - ADD YOUR PATHS HERE
# At least one path is required for the daemon to start
scan_paths:
  - /tmp/storage-sage-test  # Example: temporary test directory
  # - /var/log              # Example: system logs
  # - /data/backups         # Example: backup directory
  # - /home/user/downloads  # Example: user downloads

# Global defaults
age_off_days: 7
min_free_percent: 10
interval_minutes: 15

# Prometheus metrics
prometheus:
  port: 9090

# Logging
logging:
  rotation_days: 30

# Resource limits
resource_limits:
  max_cpu_percent: 10.0

# Cleanup options
cleanup_options:
  recursive: true
  delete_dirs: false

# NFS timeout
nfs_timeout_seconds: 5

# Database path
database_path: /var/lib/storage-sage/deletions.db

# Path-specific rules (optional - overrides global defaults)
# Uncomment and customize as needed:
